{
  "compilerOptions": {
    "typeRoots": [
      "./src/types/express.d.ts",
      "./node_modules/@types"
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "prisma"
  ]
}