generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String               @id @default(uuid())
  firstName           String
  lastName            String
  email               String               @unique
  password            String
  provider            String?
  providerId          String?
  isAdmin             Boolean              @default(false)
  address             String?
  phone               String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  image               String?              @db.Text
  imagePublicId       String?              @db.Text


  images              Image[]

  reviews             Review[]
  passwordResetTokens PasswordResetToken[]
  favorite           Favorite[]

  reviewsReplied      ReviewReply[]
  reviewsLiked        ReviewLike[]
  otps                Otp[]

  @@unique([provider, providerId])
  @@map("users")
}

model Otp {
  id        String   @id @default(uuid())
  email     String?
  phone     String?
  otp       String      // You can hash this too if you want
  expiresAt DateTime
  createdAt DateTime @default(now())
  consumed  Boolean  @default(false)

  @@index([email])
  @@index([phone])
  users User[]
}


model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique // Hashed token
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("password_reset_tokens")
}

model Review {
  id         String  @id @default(cuid())
  rating     Int
  title      String?
  comment    String
  isApproved Boolean @default(true)

  likesCount Int     @default(0) // NEW: fast UI access
  replyCount Int     @default(0) // NEW: fast UI access


  user   User   @relation(fields: [userId], references: [id])
  userId String

  replies ReviewReply[]
  likes   ReviewLike[]
  images  Image[] // <- Your existing Image model handles this

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, title, comment])
  @@index([userId])
  @@index([createdAt])
}


model ReviewReply {
  id      String @id @default(cuid())
  comment String

  review     Review       @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId   String
  likes      ReviewLike[]
  likesCount Int          @default(0) // NEW

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())

  @@index([reviewId])
  @@index([userId])
}


model ReviewLike {
  id        String   @id @default(cuid())

  reviewId       String?
  review         Review?      @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  reviewReplyId  String?
  reviewReply    ReviewReply? @relation(fields: [reviewReplyId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, reviewId])
  @@unique([userId, reviewReplyId])
    @@index([reviewId])
  @@index([reviewReplyId])
  @@index([userId])

}

model Favorite {
  id        String   @id @default(uuid())
  userId    String

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId])
  @@index([userId])

  @@map("favorites") // why this? - to explicitly set the table name in the database
}

model Image {
  id        String   @id @default(uuid())
  url       String
    publicId  String?

  userId    String?
  reviewId  String?
  review    Review?  @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([reviewId])
}