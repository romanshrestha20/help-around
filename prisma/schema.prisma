generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  firstName     String?
  lastName      String?
  email         String   @unique
  passwordHash  String?

  isAdmin       Boolean  @default(false)
  isVerified    Boolean  @default(false)

  address       String?
  phone         String?

  image         String?  @db.Text
  imagePublicId String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //  AUTH
  refreshTokens       RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  otps                Otp[]
  oauthAccounts       OAuthAccount[]

  // DOMAIN
  images         Image[]
  reviews        Review[]
  reviewsReplied ReviewReply[]
  reviewsLiked   ReviewLike[]
  favorite       Favorite[]

  @@map("users")
}


model OAuthAccount {
  id         String @id @default(uuid())
  provider   AuthProvider
  providerId String

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([provider, providerId])
  @@index([userId])
  @@map("oauth_accounts")
}



model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([tokenHash])
  @@map("refresh_tokens")
}

model Otp {
  id        String   @id @default(uuid())
  email     String?
  phone     String?
  otpHash   String
  expiresAt DateTime
  consumed  Boolean  @default(false)
  userId    String?

  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([email])
  @@index([phone])
  @@index([userId])
  @@map("otps")
}


model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique // Hashed token
  userId    String
  usedAt DateTime?

  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("password_reset_tokens")
}

model Review {
  id         String  @id @default(cuid())
  rating     Int
  title      String?
  comment    String
  isApproved Boolean @default(true)

  likesCount Int     @default(0) // NEW: fast UI access
  replyCount Int     @default(0) // NEW: fast UI access


  user   User   @relation(fields: [userId], references: [id])
  userId String

  replies ReviewReply[]
  likes   ReviewLike[]
  images  Image[] // <- Your existing Image model handles this

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, title, comment])
  @@index([userId])
  @@index([createdAt])
}


model ReviewReply {
  id      String @id @default(cuid())
  comment String

  review     Review       @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId   String
  likes      ReviewLike[]
  likesCount Int          @default(0) // NEW

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())

  @@index([reviewId])
  @@index([userId])
}


model ReviewLike {
  id        String   @id @default(cuid())

  reviewId       String?
  review         Review?      @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  reviewReplyId  String?
  reviewReply    ReviewReply? @relation(fields: [reviewReplyId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, reviewId])
  @@unique([userId, reviewReplyId])
    @@index([reviewId])
  @@index([reviewReplyId])
  @@index([userId])

}

model Favorite {
  id        String   @id @default(uuid())
  userId    String

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId])
  @@index([userId])

  @@map("favorites") // why this? - to explicitly set the table name in the database
}

model Image {
  id        String   @id @default(uuid())
  url       String
    publicId  String?

  userId    String?
  reviewId  String?
  review    Review?  @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([reviewId])
}


enum AuthProvider {
  LOCAL
  GOOGLE
  FACEBOOK
  APPLE
}
